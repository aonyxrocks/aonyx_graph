{
    "name": "Gleam",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "true"
        },
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "github.vscode-github-actions",
                "gleam.gleam"
            ]
        }
    },
    "remoteUser": "vscode"
}